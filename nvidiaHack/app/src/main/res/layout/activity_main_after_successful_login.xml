<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gradient_start"
    tools:context="com.raj.nvidiahack.mainActivityAfterSuccessfulLogin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/nvidia2"
        android:scaleType="fitXY"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:columnCount="2"
        android:rowCount="2"
        android:id="@+id/gridLayout">


        <Button
            android:background="@drawable/box_shape_green"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:onClick="heatMap"
            android:text="Heat Map" />


        <Button
            android:background="@drawable/box_shape_green"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:onClick="attendance"
            android:text="Attendance" />

        <Button
            android:background="@drawable/box_shape_green"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:onClick="amazonGo"
            android:text="Object Scan" />

        <Button
            android:background="@drawable/box_shape_green"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:onClick="webChat"
            android:text="Web Chat" />


    </GridLayout>


    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/box_shape_green"
        android:onClick="logout"
        android:text="Logout"
        android:textSize="20sp" />

</RelativeLayout>
